@model IEnumerable<Tournament.Models.FixtureSummary>

<h2>Fixtures</h2>

@if (Model.Count() == 0)
{
    @Html.ActionLink("Generate fixtures", "Generate", new { id = ViewBag.GroupID });
}

@foreach (Tournament.Models.FixtureSummary fixture in Model)
{
    
    <p>
        @fixture.HomeTeam
        vs
        @fixture.AwayTeam

        @if(fixture.HasResult)
        {
            <input type="text" value="@fixture.HomeScore" />
                <text> - </text>
            <input type="text" value="@fixture.AwayScore" />
        }
        else
        {
            using (Html.BeginForm("Update", "Fixtures"))
            {
                <input type="text" name="homeScore" />
                <text> - </text>
                <input type="text" name="awayScore" />
                <input type="hidden" name="fixtureID" value="@fixture.FixtureID" />
                <input type="submit" value="Save" />
            }
        }
            
    </p>
}
